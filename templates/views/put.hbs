<!DOCTYPE html>
<html>

<head>
    <title>Basic Form</title>
</head>

<body>
    <h1>Basic Form</h1>

    <form action="/update/{{this.id}}" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{this.name}}" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="{{this.email}}" required>

        <label for="message">Message:</label>
        <textarea id="message" name="message" value="{{this.message}}" required></textarea>

        <button type="update">update</button>
    </form>

</body>

</html>